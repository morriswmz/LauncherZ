<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherZ.Controls"
        xmlns:controls="clr-namespace:LauncherZ.Controls"
        mc:Ignorable="d" x:Class="LauncherZ.MainWindow"
        Title="LauncherX" Height="140" Width="500" WindowStartupLocation="CenterScreen"
        SizeToContent="Height" ResizeMode="NoResize" WindowStyle="None"
        Background="Transparent" AllowsTransparency="True">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderThickness="1" Margin="10" Background="#99000000" MinHeight="120" BorderBrush="{DynamicResource BorderBrush}">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="8" Opacity="0.8"/>
            </Border.Effect>
            <StackPanel>
                <controls:TaskInput x:Name="CtlTaskInput" HintText="LaunchZ" Height="76" PreviewKeyUp="CtlTaskInput_PreviewKeyUp"/>
                <TextBlock Foreground="{DynamicResource TitleBrush}"  Text="{Binding Text, ElementName=CtlTaskInput}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
