<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BorderColor">#FFCCCCCC</Color>
    <SolidColorBrush x:Key="BorderBrush" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="InputBackground" Color="#19FFFFFF"/>
    <SolidColorBrush x:Key="TitleBrush" Color="White"/>
    <SolidColorBrush x:Key="InputTextBrush" Color="#FFEEEEEE"/>
    <Style x:Key="TaskTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>
    <Style x:Key="TaskDescriptionStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"></Setter>
        <Setter Property="Foreground" Value="#FFEEEEEE"></Setter>
    </Style>
    
    
</ResourceDictionary>